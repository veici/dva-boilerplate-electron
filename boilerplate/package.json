{
  "private": true,
  "author": {
    "name": "chencheng",
    "email": "sorrycc@gmail.com"
  },
  "scripts": {
    "start": "electron app/dist/main",
    "postinstall": "cd app && yarn && cd .. && yarn rebuild",
    "dev:renderer": "roadhog server --no-open",
    "dev:main": "webpack -w --config ./webpack.config.main.babel.js",
    "dev": "concurrently \"yarn dev:renderer\" \"yarn dev:main\"",
    "clean": "chmod u+x dist && rm -rf node_modules app/node_modules dist app/dist",
    "build": "roadhog build && webpack --config ./webpack.config.main.babel.js",
    "lint": "eslint --ext .js src test webpack.config.babel.js",
    "test": "mocha test/**/*-test.js --require babel-register --require ./test/setup --no-timeouts",
    "rebuild": "electron-rebuild -m ./app",
    "package": "yarn build && yarn rebuild && build",
    "pack:dir": "yarn build && yarn rebuild && build --dir",
    "pack:justBuild": "build --dir",
    "precommit": "yarn lint"
  },
  "build": {
    "appId": "com.sorrycc.dva-boilerplate",
    "category": "public.app-category.developer-tools",
    "asar": false
  },
  "devDependencies": {
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.8",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-dva-hmr": "^0.3.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "babel-runtime": "^6.20.0",
    "concurrently": "^3.1.0",
    "devtron": "^1.4.0",
    "dva": "^1.1.0",
    "electron": "^1.4.7",
    "electron-builder": "^8.6.0",
    "electron-debug": "^1.1.0",
    "electron-rebuild": "^1.4.0",
    "eslint": "^3.10.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.7.1",
    "eslint-plugin-unicorn": "^1.0.0",
    "husky": "^0.11.9",
    "mocha": "^3.2.0",
    "react": "^15.4.0",
    "react-dom": "^15.4.0",
    "redbox-react": "^1.3.3",
    "roadhog": "^0.5.2",
    "webpack": "^1.13.3"
  },
  "license": "MIT"
}
